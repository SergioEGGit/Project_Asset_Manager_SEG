//------------------------------------------------------------------------------

	#pragma hdrstop

//-----------------------------Librerias----------------------------------------

	#include "MatrizDispersa.h"
	#include <iostream>
	#include <string>
	#include <cstring>

	using namespace std;

//------------------------------------------------------------------------------

	#pragma package(smart_init)

//---------------------------------Métodos--------------------------------------

	void CrearDepartamentoMatrizDispersaUsuarios(MatrizDispersaUsuarios &Matriz, string NombreDepartamento, MatrizDispersaUsuarios& Usuario, MatrizDispersaUsuarios& Departamento)
	{
		MatrizDispersaUsuarios NuevoUsuario = Usuario;
		MatrizDispersaUsuarios NuevoDepartamento = Departamento;
		MatrizDispersaUsuarios OtroDepartamento = Matriz;

		while(OtroDepartamento != nullptr)
		{
			if(strcmp(NombreDepartamento.c_str(), OtroDepartamento -> NombreDepartamento.c_str()) == 1)
			{
				if(OtroDepartamento -> Sgte  != nullptr)
				{
					if(strcmp(NombreDepartamento.c_str(), OtroDepartamento -> Sgte -> NombreDepartamento.c_str()) == -1)
					{
						MatrizDispersaUsuarios Auxiliar = OtroDepartamento -> Sgte;
						OtroDepartamento -> Sgte = NuevoDepartamento;
						Auxiliar -> Ante = NuevoDepartemnto;
						NuevoDepartamento -> Ante = OtroDepartamento;
						NuevoDepartamento -> Sgte = Auxiliar;
						NuevoDepartamento -> Aba = NuevoUsuario;
						NuevoUsuario -> Arr = NuevoDepartamento;
						return true;
					}
				}
				else
				{
					OtroDepartamento -> Sgte = NuevoDepartamento;
					NuevoDepartamento -> Ante = OtroDepartamento;
					NuevoDepartamento -> Aba = NuevoUsuario;
					NuevoUsuario -> Arr = NuevoDepartamento;
					return true;
				}
			}
			Departamento = Departamento -> Sgte;
		}
		return false;
	}
